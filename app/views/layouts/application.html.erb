<!DOCTYPE html>
<html>
  <head>
    <title>SimpleBlog</title>
    <%= csrf_meta_tags %>
     <%= stylesheet_link_tag    "default", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "default", "data-turbolinks-track" => true %>
    <%= stylesheet_link_tag  "https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"   %>
     <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Playfair+Display:700,900" %>
  </head>

  <body>
   <div class="container">
        <div class="nav-scroller py-1 mb-2">
          <nav class="navbar bg-dark navbar-dark navbar-expand-sm" ">
              <a class="navbar-brand" href="#">SimpleBlog</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar navbar-nav">
                  <li class="nav-item"><%= link_to("Home", home_path, {:class => 'nav-link'}) %> </li>
                  
                </ul>
                <ul class="navbar navbar-nav ml-auto">
                  <li class="nav-item"><%= link_to("Create Post",new_post_path , {:class => 'nav-link'}) %> </li>
                  
                </ul>
              </div>  
          </nav>
        </div>
         <%= yield %>
    </div>  
  </body>
</html>
